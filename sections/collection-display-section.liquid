<style>
  .collection-display {
    text-align: center;
  }

  .collections-wrapper {
    display: flex;
    gap: 20px;
    justify-content: center;
  }

  .collection-item {
    position: relative;
    width: 100%;
    text-decoration: none;
  }

  .collection-item img {
    width: 100%;
    height: 82rem;
    display: block;
    object-fit: cover;
  }

  .collection-text {
    text-align: start;
    position: absolute;
    bottom: 0;
    left: 0px;
    color: #fff;
    margin: 4.8rem;
  }

  .collection-text h2 {
    font-style: italic;
    font-family: 'Gretha', sans-serif;
    color: var(--secondary-color);
  }

  .shop-collection {
    text-decoration: none;
    text-transform: uppercase;
    color: var(--secondary-color);
  }

  .overlay {
    display: block !important;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  @media (max-width: 768px) {
    .collections-wrapper {
      flex-direction: column;
    }

    .collection-item img {
      height: 42rem;
    }
  }
</style>

<section class="collection-display p48">
  {% render 'double-line-snippet',
    double_line_sub_title: section.settings.double_line_sub_title,
    double_line_text: section.settings.double_line_text
  %}
  <div class="mb48">
    <img width="33" src="https://cdn.shopify.com/s/files/1/0664/2404/5740/files/maru-logo.png?v=1728324567" />
    <img width="44" src="https://cdn.shopify.com/s/files/1/0664/2404/5740/files/maru-logo.png?v=1728324567" />
    <img width="33" src="https://cdn.shopify.com/s/files/1/0664/2404/5740/files/maru-logo.png?v=1728324567" />
  </div>
  <div class="collections-wrapper mb48">
    <!-- First Collection -->
    <a href="{{ collections[section.settings.collection_1].url }}" class="collection-item">
      <img
        src="{{ collections[section.settings.collection_1].image | img_url: 'master' }}"
        alt="{{ collections[section.settings.collection_1].title }}"
      >
      <div class="overlay" style="background: linear-gradient(182deg, rgba(0, 0, 0, 0.00) 75.68%, #000 98.38%);"></div>
      <div class="collection-text">
        <h2 class="fw600 lh130 f2">{{ collections[section.settings.collection_1].title }} Collection</h2>

        <div class="d-inflex align-center" style="gap: 1rem;">
          <div
            style="
              width: 2.4rem;
              position: relative;
              border-top: 1px solid var(--secondary-color);
              height: 0.1rem;
              display: block !important;
            "
          ></div>
          <span class="shop-collection fw700 lh150 f5">Shop Collection</span>
        </div>
      </div>
    </a>

    <!-- Second Collection -->
    <a href="{{ collections[section.settings.collection_2].url }}" class="collection-item">
      <img
        src="{{ collections[section.settings.collection_2].image | img_url: 'master' }}"
        alt="{{ collections[section.settings.collection_2].title }}"
      >
      <div class="overlay" style="background: linear-gradient(182deg, rgba(0, 0, 0, 0.00) 75.68%, #000 98.38%);"></div>
      <div class="collection-text">
        <h2 class="fw600 lh130 f2">{{ collections[section.settings.collection_2].title }} Collection</h2>
        <div class="d-inflex align-center" style="gap: 1rem;">
          <div
            style="
              width: 2.4rem;
              position: relative;
              border-top: 1px solid var(--secondary-color);
              height: 0.1rem;
              display: block !important;
            "
          ></div>
          <span class="shop-collection fw700 lh150 f5">Shop Collection</span>
        </div>
      </div>
    </a>
  </div>

  {% render 'custom-button',
    button_text: section.settings.button_text,
    button_link: section.settings.button_link,
    button_bg_color: 'var(--violet-color)',
    button_text_color: 'var(--secondary-color)',
    line_color: 'var(--secondary-color)',
    border_color: 'var(--secondary-color)',
    show_second_frame_child: true
  %}
</section>

{% schema %}
{
  "name": "Collection Display",
  "settings": [
    {
      "type": "text",
      "id": "double_line_sub_title",
      "label": "Subtitle text"
    },
    {
      "type": "text",
      "id": "double_line_text",
      "label": "Text"
    },
    {
      "type": "collection",
      "id": "collection_1",
      "label": "First Collection"
    },
    {
      "type": "collection",
      "id": "collection_2",
      "label": "Second Collection"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Explore All Collections"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Collection Display Section"
    }
  ]
}
{% endschema %}
