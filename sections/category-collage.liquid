<style>
  .category-collage-section {
    width: 100%;
    padding: 6rem 0;
  }

  .category-collage-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: auto auto;
    gap: 1.5rem;
    width: 100%;
    margin: 0 auto;
    padding: 0 var(--grid-mobile-horizontal-spacing);
  }

  @media screen and (min-width: 750px) {
    .category-collage-grid {
      padding: 0 var(--grid-desktop-horizontal-spacing);
    }
  }

  .category-item {
    position: relative;
    overflow: hidden;
    cursor: pointer;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    min-height: 450px;
    aspect-ratio: 1;
    width: 100%;
  }

  .category-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  }

  .category-item--large {
    grid-column: 1 / -1;
    min-height: 550px;
    aspect-ratio: 2 / 1;
  }

  .category-item--small {
    min-height: 450px;
    aspect-ratio: 1;
  }

  .category-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: top;
    transition: transform 0.3s ease;
  }

  .category-item:hover .category-image {
    transform: scale(1.05);
  }

  .category-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
    padding: 2rem;
  }
  .category-overlay .category-title, .category-overlay .category-subtitle {
    color: var(--secondary-color);
  }
  .category-title {
    font-size: 2.4rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .category-subtitle {
    font-size: 1.4rem;
    font-weight: 400;
    opacity: 0.9;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .category-link {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
    text-decoration: none;
    color: inherit;
  }

  @media (max-width: 768px) {
    .category-collage-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
      padding: 0 2rem;
    }

    .category-item--large {
      grid-column: 1;
      aspect-ratio: 1 / 1;
    }

    .category-item--small {
      min-height: 300px;
    }

    .category-item--large {
      min-height: 400px;
    }

    .category-title {
      font-size: 2rem;
    }

    .category-subtitle {
      font-size: 1.2rem;
    }

    .category-overlay {
      padding: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .category-title {
      font-size: 1.8rem;
    }

    .category-subtitle {
      font-size: 1rem;
    }

    .category-overlay {
      padding: 1rem;
    }
  }
</style>

<section class="category-collage-section" id="CategoryCollage-{{ section.id }}">
  <div class="category-collage-grid">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'collage_item' %}
          <div class="category-item category-item--{{ block.settings.size }}" {{ block.shopify_attributes }}>
            {% if block.settings.image != blank %}
              <img 
                src="{{ block.settings.image | img_url: 'master' }}" 
                alt="{{ block.settings.title | escape }}"
                class="category-image"
                loading="lazy"
              >
            {% else %}
              <div class="category-image" style="background-color: #f5f5f5; display: flex; align-items: center; justify-content: center; color: #999;">
                <span>No Image</span>
              </div>
            {% endif %}

            <div class="category-overlay">
              <h3 class="category-title">{{ block.settings.title }}</h3>
              <p class="category-subtitle">{{ block.settings.subtitle }}</p>
            </div>

            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="category-link" aria-label="View {{ block.settings.title }}"></a>
            {% endif %}
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Category Collage",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Shop by Category"
    }
  ],
  "blocks": [
    {
      "type": "collage_item",
      "name": "Category Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Category Title",
          "default": "Category Name"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Category Subtitle",
          "default": "Explore Category"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Category Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Category Link"
        },
        {
          "type": "select",
          "id": "size",
          "label": "Category Size",
          "options": [
            {
              "value": "small",
              "label": "Small (Top Row)"
            },
            {
              "value": "large",
              "label": "Large (Bottom Row)"
            }
          ],
          "default": "small"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Category Collage",
      "blocks": [
        {
          "type": "collage_item",
          "settings": {
            "title": "Dresses",
            "subtitle": "Explore Category",
            "size": "small"
          }
        },
        {
          "type": "collage_item",
          "settings": {
            "title": "Jumpsuits",
            "subtitle": "Explore Category",
            "size": "small"
          }
        },
        {
          "type": "collage_item",
          "settings": {
            "title": "Scarfs",
            "subtitle": "Explore Category",
            "size": "large"
          }
        }
      ]
    }
  ]
}
{% endschema %}
