<style>
  .custom-footer {
    background: #ffffff;
    padding-top: 48px;
  }
  
  .footer-container {
    width: 100%;
  }

  /* Feature Badges Section */
  .footer-features {
    background: #ffffff;
    padding: 2rem;
    border-bottom: 1px solid #E2E2E2;
    border-top: 1px solid #E2E2E2;
  }

  .footer-features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 3rem;
    padding: 0 4rem;
  }

  .footer-feature {
    text-align: center;
    position: relative;
    padding: 0 2rem;
  }

  .footer-feature:not(:last-child)::after {
    content: '';
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 1px;
    height: 60%;
    background-color: #E2E2E2;
  }

  .footer-feature h3 {
    font-size: 1.2rem;
    font-weight: 700;
    color: #333;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .footer-feature p {
    font-size: 0.9rem;
    color: #666;
    line-height: 1.5;
    margin: 0;
  }

  /* Main Footer Content */
  .footer-main {
    background: #FBFBFB;
    padding: 4rem 2rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    padding: 0 4rem;
  }

  .footer-navigation {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    gap: 2rem;
  }

  /* Brand Section */
  .footer-brand {
    display: flex;
    flex-direction: column;
  }

  .footer-logo {
    margin-bottom: 1.5rem;
  }

  .footer-logo img {
    height: 40px;
    width: auto;
  }

  .footer-description {
    color: #333;
    font-size: 0.9rem;
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .footer-newsletter {
    margin-bottom: 2rem;
  }

  .newsletter-form__field-wrapper {
    position: relative;
    margin-bottom: 1rem;
  }

  .newsletter-form__field-wrapper .field {
    position: relative;
  }

  .newsletter-form__field-wrapper .field__input {
    width: 100%;
    padding: 0.75rem 2.5rem 0.75rem 0;
    border: none;
    border-bottom: 1px solid #ccc;
    background: transparent;
    font-size: 0.9rem;
    color: #333;
  }

  .newsletter-form__field-wrapper .field__input:focus {
    outline: none;
    border-bottom-color: #333;
  }

  .newsletter-form__field-wrapper .field__input::placeholder {
    color: #999;
  }

  .newsletter-form__field-wrapper .field__label {
    display: none;
  }

  .footer-submit {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: #333;
    cursor: pointer;
    padding: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .footer-submit:hover {
    color: #000;
  }

  .footer-social-icons {
    display: flex;
    gap: 1.5rem;
    margin-top: 1rem;
  }

  .footer-social-icons a {
    color: #333;
    font-size: 1.2rem;
    text-decoration: none;
    transition: color 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
  }

  .footer-social-icons a:hover {
    color: #666;
  }

  .footer-social-icons .social-icon {
    width: 24px;
    height: 24px;
  }

  /* Navigation Columns */
  .footer-column h4 {
    font-size: 1rem;
    font-weight: 700;
    color: #333;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .footer-column ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-column ul li {
    margin-bottom: 0.75rem;
  }

  .footer-column ul li a {
    color: #000000;
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }

  .footer-column ul li a:hover {
    color: #333;
  }

  .footer-column p {
    color: #666;
    font-size: 0.9rem;
    margin: 0;
  }

  /* Copyright Section */
  .footer-copyright {
    background: #FFFFFF;
    padding: 2rem;
    text-align: center;
    border-top: 1px solid #e5e5e5;
  }

  .footer-copyright p {
    color: #666;
    font-size: 0.85rem;
    margin: 0;
  }

  /* Mobile Responsive */
  @media (max-width: 1024px) {
    .footer-features-grid {
      padding: 0 2rem;
    }
    
    .footer-content {
      grid-template-columns: 1fr;
      gap: 3rem;
      padding: 0 2rem;
    }
    
    .footer-navigation {
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }
  }

  @media (max-width: 768px) {
    .footer-features-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
      padding: 0 1rem;
    }

    .footer-feature {
      padding: 0;
      text-align: center;
    }

    .footer-feature:not(:last-child)::after {
      display: none;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
      padding: 0 1rem;
    }

    .footer-navigation {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .newsletter-form__field-wrapper {
      flex-direction: column;
    }

    .footer-social-icons {
      justify-content: flex-start;
    }
  }
</style>

<footer class="custom-footer">
  <div class="footer-container">
    <!-- Feature Badges Section -->
    <div class="footer-features">
      <div class="footer-features-grid">
        {% for block in section.blocks %}
          {% if block.type == 'feature_badge' %}
            <div class="footer-feature">
              <h3>{{ block.settings.title }}</h3>
              <p>{{ block.settings.description }}</p>
            </div>
          {% endif %}
        {% endfor %}
        
        <!-- Default badges - always show these 3 -->
        {% assign badge_count = 0 %}
        {% for block in section.blocks %}
          {% if block.type == 'feature_badge' %}
            {% assign badge_count = badge_count | plus: 1 %}
          {% endif %}
        {% endfor %}
        
        {% if badge_count == 0 %}
          <div class="footer-feature">
            <h3>QUALITY FABRICS</h3>
            <p>Sourced from premium fabrics imported from around the globe for unmatched quality.</p>
          </div>
          <div class="footer-feature">
            <h3>PERSONAL STYLIST</h3>
            <p>Personalized styling experience for every showroom visit</p>
          </div>
          <div class="footer-feature">
            <h3>HANDCRAFTED</h3>
            <p>Expertly crafted by artisans with meticulous attention to detail</p>
          </div>
        {% elsif badge_count == 1 %}
          <div class="footer-feature">
            <h3>PERSONAL STYLIST</h3>
            <p>Personalized styling experience for every showroom visit</p>
          </div>
          <div class="footer-feature">
            <h3>HANDCRAFTED</h3>
            <p>Expertly crafted by artisans with meticulous attention to detail</p>
          </div>
        {% elsif badge_count == 2 %}
          <div class="footer-feature">
            <h3>HANDCRAFTED</h3>
            <p>Expertly crafted by artisans with meticulous attention to detail</p>
          </div>
        {% endif %}
      </div>
    </div>

    <!-- Main Footer Content -->
    <div class="footer-main">
      <div class="footer-content">
        <!-- Brand Section -->
        <div class="footer-brand">
          <div class="footer-logo">
            <img src="{{ section.settings.logo | img_url: 'master' }}" alt="Footer Logo">
          </div>
          <p class="footer-description">{{ section.settings.description }}</p>
          
          <!-- Email Subscription Form -->
          <div class="footer-newsletter" style="max-width: 700px;">
            {%- form 'customer', id: 'ContactFooter', class: 'newsletter-form' -%}
              <input type="hidden" name="contact[tags]" value="newsletter">
              <div class="newsletter-form__field-wrapper">
                {% comment %} removed field class {% endcomment %}
                <div class="">
                  <input
                    id="NewsletterForm--{{ section.id }}"
                    type="email"
                    name="contact[email]"
                    class="field__input"
                    value="{{ form.email }}"
                    aria-required="true"
                    autocorrect="off"
                    autocapitalize="off"
                    autocomplete="email"
                    {% if form.errors %}
                      autofocus
                      aria-invalid="true"
                      aria-describedby="ContactFooter-error"
                    {% elsif form.posted_successfully? %}
                      aria-describedby="ContactFooter-success"
                    {% endif %}
                    placeholder="{{ section.settings.email_placeholder }}"
                    required
                  >
                  <label class="field__label" for="NewsletterForm--{{ section.id }}">
                    {{ section.settings.email_placeholder }}
                  </label>
                  <button
                    type="submit"
                    name="commit"
                    id="Subscribe"
                    class="footer-submit"
                  >
                    <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M8 0L6.59 1.41L12.17 7H0V9H12.17L6.59 14.59L8 16L16 8L8 0Z" fill="currentColor"/>
                    </svg>
                  </button>
                </div>
              </div>
              {%- if form.errors -%}
                <small class="newsletter-form__message form__message" id="ContactFooter-error">
                  {{- form.errors.translated_fields.email | capitalize }}
                  {{ form.errors.messages.email -}}
                </small>
              {%- endif -%}
              {%- if form.posted_successfully? -%}
                <h3
                  class="newsletter-form__message newsletter-form__message--success form__message"
                  id="ContactFooter-success"
                  tabindex="-1"
                  autofocus
                >
                  {{- 'newsletter.success' | t }}
                </h3>
              {%- endif -%}
            {%- endform -%}
          </div>

          <!-- Social Icons -->
          <div class="footer-social-icons">
            {% if section.settings.pinterest_link != blank %}
